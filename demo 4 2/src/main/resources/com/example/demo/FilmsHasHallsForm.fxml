<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="406.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/17.0.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.FilmsHasHallsController">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onAddClick" text="Добавить">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </Button>
                <Button mnemonicParsing="false" onAction="#onDeleteClick" text="Удалить" />
            </children>
        </HBox>
        <TableView fx:id="mainTable" prefHeight="554.0" prefWidth="780.0" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
